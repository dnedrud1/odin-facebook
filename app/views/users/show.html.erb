<h1>Profile for user with email: <%= @user.email %></h1>

<br>

<% if current_user == @user %>
  <%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Write what's on your mind...", class: "form-control", rows: "3" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
<% end %>

<br>

<% @user_posts.each do |post| %>
  <div class="well">
      <%= post.content %>
      <%= render "shared/likes", :post => post %>
      <br>
  </div>
<% end %>